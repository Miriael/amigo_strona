    width: 100%;
    margin: 30px auto;
  }

  h1 {
    text-align: center;
  }

  .about-us__wrapper {
    font-size: clamp(1rem, 2.5vw, 1.6rem);
    color: var(--yellow-color);
    text-shadow: var(--yellow-text-shadow);
    background-color: var(--background-blue);
    border-radius: 30px;
    padding: 30px 30px;
    width: 80%;
    margin: 50px auto 80px auto;;
    box-shadow: 5px 5px 20px var(--background-blue-dark);
  }

  .side-by-side {
    display: flex;
    align-items: center;
  }

  .side-by-side p {
    width: 30%;
    margin: 0 auto;
  }

  .side-by-side img {
    width: 60%;
    max-width: 40ch;
    max-height: 30ch;
  }
</style>

