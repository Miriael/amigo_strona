---
import LayoutNoBreadEn from '../layouts/LayoutNoBreadEn.astro';
import Card from '../components/Card.astro';
import SlideCard from '../components/SlideCard.astro';
---

<LayoutNoBreadEn title="Driving School AMIGO">
  <section class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        <li class="splide__slide"><div class="slide-img__container"><img src="https://miriael.github.io/amigo_strona/3.jpg"><div class="slide-img__text">Established in 1991</div></li>
        <li class="splide__slide"><div class="slide-img__container"><img src="https://miriael.github.io/amigo_strona/3.jpg"><div class="slide-img__text">Over 20 000 satisfied customers</div></li>
        <li class="splide__slide"><div class="slide-img__container"><img src="https://miriael.github.io/amigo_strona/3.jpg"><div class="slide-img__text">Driving courses of every kind</div></li>
      </ul>
    </div>
  </section>
  <div class="class-date">
    <div class="class-date__wrapper">
      <p>Next driving course starts: 12.12.2023</p>
    </div>
  </div>
  <main>
    <section class="description">
      <h1>Driving School AMIGO - with us you will get the driving license you always wanted!<h1/>
      <p>Driving school AMIGO is one of the best driving schools in Lublin. With us you will get the driving license you want, increase your qualifications and improve your abilities behind the wheel. Your success is our priority, that's why we ensure to not only teach you safe driving, but also prepare you for your driving license exam.</p>
      <h2>Don't wait any longer and sign up right now for a driving license course at AMIGO!</h2>
    </section>
    <section class="stats">
      <div class="stats__wrapper">
        <p>Over 20 000 satisfied customers</p>
        <p>Established in 1991</p>
      </div>
    </section>
    <section class="categories">
      <SlideCard 
        href="https://miriael.github.io/amigo_strona/kursy/placeholder"
        title="Driving license class B"
        body=""
        direction="slidecard-right"/>
      <SlideCard 
        href="https://miriael.github.io/amigo_strona/kursy/placeholder"
        title="Driving license class B-automatic"
        body=""
        direction="slidecard-left"/>
    </section>
  </main>
</LayoutNoBreadEn>

<style>
  * {
    margin: 0px;
    padding: 0px;
  }

  .class-date {
    background-color: var(--background-blue-dark);
  }

  .class-date__wrapper {
    text-align: center;
    margin: 0 auto;
    font-size: clamp(1em, 2.5vw, 2em);
    padding: 10px 0px;
    color: var(--yellow-color);
    text-shadow: var(--yellow-text-shadow);
  }

  .splide {
    max-height: 70dvh;
  }

  .splide img {
    width: 100%;
    max-height: 70dvh;
  }

  .slide-img__container {
    position: relative;
    text-align: center;
  }

  .slide-img__text {
    font-size: 2em;
    font-weight: bold;
    position: absolute;
    top: 25%;
    left: 70%;
    transform: translate(-50%, -50%);
    color: var(--yellow-color);
    text-shadow: var(--yellow-text-shadow);
  }

  main {
    width: 80%;
    margin: 0 auto;
  }

  h1 {
    margin-bottom: 3rem;
    line-height: 3rem;
    font-size: 2.5rem;
  }

  h2 {
    margin-top: 2rem;
  }

  .description {
    max-width: 1090px;
    width: 90%;
    margin: 0 auto;
    margin-top: 20px;
    color: var(--yellow-color);
    background-color: var(--background-blue);
    box-shadow: 5px 5px 20px var(--background-blue-dark);
    border-radius: 60px;
    padding: 3em;
    margin-bottom: 20px;
    text-shadow: var(--yellow-text-shadow);
    line-height: 1.9em;
  }

  .stats {
    background-color:rgb(153, 19, 19);
    display: none;
  }

  .stats__wrapper {
    text-align: center;
    padding: 1em 0px;
    color: var(--yellow-color);
    font-size: 1.5em;
    text-shadow: var(--yellow-text-shadow);
  }

  .categories {
    margin: 0 auto;
    max-width: 1200px;
    justify-content: center;
    display: flex;
    flex-grow: 1;
    flex-wrap: wrap;
    gap: 20px;
    padding: 2.5em 0px;
    background-color: var(--background-blue);
    border-radius: 30px;
    margin-bottom: 30px;
    box-shadow: 5px 5px 20px var(--background-blue-dark);
  }

  @media (max-width: 600px) {
    .slide-img__text {
      display: none;
    }
    .stats {
      clip-path: polygon(0 0,100% 25px,100% 100%,0 100%);
      display: block;
    }
    .stats p + p {
      margin-top: 20px;
    }
    main {
      width: 100%;
    }
    .categories {
      clip-path: polygon(0 0,100% 25px,100% 100%,0 100%);
      margin-top: -25px;
      background-color: var(--background-blue-dark);
      border-radius: 0px;
    }
    .description {
      width: 90%;
    }
    .main-upper-decorator {
      display: none;
    }

    h1 {
      font-size: 1.6rem;
    }
  }
</style>

<script>
  import '@splidejs/splide/css';
  import Splide from '@splidejs/splide';
  new Splide( '.splide', {
    autoplay: true,
    arrows: false,
    interval: 4000,
    type: 'loop',
  } ).mount();
</script>